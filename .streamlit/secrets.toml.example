# Snowflake Connection Configuration
# Copy this file to .streamlit/secrets.toml and fill in your credentials

[connections.snowflake]
account = "your-account-identifier"  # e.g., "xy12345.us-east-1"
user = "your-username"
password = "your-password"
warehouse = "your-warehouse"  # e.g., "COMPUTE_WH"
database = "HOME_INSPECTION_DB"
schema = "PUBLIC"
role = "your-role"  # Optional, e.g., "ACCOUNTADMIN"

# Alternative: Use authenticator for SSO
# authenticator = "externalbrowser"

# Optional: Connection parameters
# client_session_keep_alive = true
# login_timeout = 30
